{
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/projects", "destination": "/projects.html" },
    { "source": "/favicon.ico", "destination": "/favicon.svg" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
